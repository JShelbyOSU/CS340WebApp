<!-- penguins.hbs -->
<main>
    <h2>Penguins</h2>
    <div>
        <table>

            <thead>
            <tr>
                {{#each data.[0]}}
                <th>{{@key}}</th>
                {{/each}}
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {{#each data}}
            <tr>
                <td>{{this.penguinID}}</td>
                <td>{{this.name}}</td>
                <td>{{this.dateOfBirth}}</td>
                <td>{{this.sex}}</td>
                <td>{{this.species}}</td>
                <td>{{this.habitatID}}</td>
                <td><a href="#" onClick="showform('update')">Edit</a></td>
                <td><a href="#" onClick="showform('delete')">Delete</a></td>
            </tr>
            {{/each}}
            </tbody>

        </table>
    </div>
    <hr>
    <div id="update">
        <form method="POST" id="updatePenguin">
            <legend>Edit Penguin</legend>
            <fieldset>

            <label for="penguinID">ID:</label>
            <select id="penguinID" name="penguinID" title="Penguin ID">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>

            <label for="updateName">Name:</label>
            <input type="text" id="updateName" name="name" title="Name" required pattern="[A-Za-z]+(?: [A-Za-z]+)*">
        
            <label for="updateBirthday">Birthday:</label>
            <input type="date" id="updateBirthday" name="birthday" title="Birthday">
        
            <label for="updateSex">Sex:</label>
            <select id="updateSex" name="sex" title="Sex">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        
            <label for="updateSpecies">Species:</label>
            <input type="text" id="updateSpecies" name="species" title="Species">
        
            <label for="updateHabitat">Habitat:</label>
            <select id="updateHabitat" name="habitat" title="Habitat">
                <option value="costal">Costal</option>
                <option value="arctic">Arctic</option>
                <option value="ocean">Ocean</option>
                <option value="tundra">Tundra</option>
            </select>

            <hr>
            <div>
                <label for="shows">Shows:</label>
                    <input type="checkbox" id="updateShow1" name="employees" value="Show 1">
                    <label for="updateShow1">Show 1</label>

                    <input type="checkbox" id="updateShow2" name="employees" value="Show 2">
                    <label for="updateShow2">Show 2</label>

                    <input type="checkbox" id="updateShow3" name="employees" value="Show 3">
                    <label for="updateShow3">Show 3</label>
            </div>

            </fieldset>
            <input type="submit" value="Submit">
            <input type="submit" value="Cancel">
            <hr>
        </form>
    </div>
    <div id="create"></div>
        <form method="POST" id="createPenguin">
            <legend>Add Penguin</legend>
            <fieldset>

            <label for="createName">Name:</label>
            <input type="text" id="createName" name="name" title="Name" required pattern="[A-Za-z]+(?: [A-Za-z]+)*">
        
            <label for="createBirthday">Birthday:</label>
            <input type="date" id="createBirthday" name="birthday" title="Birthday">
        
            <label for="createSex">Sex:</label>
            <select id="createSex" name="sex" title="Sex">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        
            <label for="createSpecies">Species:</label>
            <input type="text" id="createSpecies" name="species" title="Species">
        
            <label for="createHabitat">Habitat:</label>
            <select id="createHabitat" name="habitat" title="Habitat">
                <option value="costal">Costal</option>
                <option value="arctic">Arctic</option>
                <option value="ocean">Ocean</option>
                <option value="tundra">Tundra</option>
            </select>
            <hr>
            <div>
                <label for="shows">Shows:</label>
                    <input type="checkbox" id="createShow1" name="employees" value="Show 1">
                    <label for="createShow1">Show 1</label>

                    <input type="checkbox" id="createShow2" name="employees" value="Show 2">
                    <label for="createShow2">Show 2</label>
                    
                    <input type="checkbox" id="createShow3" name="employees" value="Show 3">
                    <label for="createShow3">Show 3</label>
            </div>

            </fieldset>
            <input type="submit" value="Submit">
            <input type="submit" value="Cancel">
        </form>
    </div>
</main>