    <hr>
    <div id="update">
        <form method="POST" id="updateEmployee">
            <legend>Edit Employee</legend>
            <fieldset>

            <label for="updateFirstName">First Name:</label>
            <input type="text" id="updateFirstName" name="firstName" title="First Name">
        
            <label for="updateLastName">Last Name:</label>
            <input type="text" id="updateLastName" name="lastName" title="Last Name">
        
            <label for="updatePosition">Position:</label>
            <input type="text" id="updatePosition" name="position" title="Position">
        
            <label for="updateHireDate">Hire Date:</label>
            <input type="date" id="updateHireDate" name="hireDate" title="Hire Date">
        
            <label for="updateSalary">Salary:</label>
            <input type="number" step="10" id="updateSalary" name="salary" title="Salary">
        
            <label for="updateHabitatID">Habitat ID:</label>
            <input type="number" id="updateHabitatID" name="habitatID" title="Habitat ID">

            </fieldset>
            <input type="submit" value="Submit">
            <input type="submit" value="Cancel">
            
            <hr>

            <legend>Add Employee</legend>
            <fieldset>

            <label for="createFirstName">First Name:</label>
            <input type="text" id="createFirstName" name="firstName" title="First Name">
        
            <label for="createLastName">Last Name:</label>
            <input type="text" id="createLastName" name="lastName" title="Last Name">
        
            <label for="createPosition">Position:</label>
            <input type="text" id="createPosition" name="position" title="Position">
        
            <label for="createHireDate">Hire Date:</label>
            <input type="date" id="createHireDate" name="hireDate" title="Hire Date">
        
            <label for="createSalary">Salary:</label>
            <input type="number" step="10" id="createSalary" name="salary" title="Salary">
        
            <label for="createHabitatID">Habitat ID:</label>
            <input type="number" id="createHabitatID" name="habitatID" title="Habitat ID">

            </fieldset>
            <input type="submit" value="Submit">
            <input type="reset" value="Cancel">
        </form>
    </div>
</main>